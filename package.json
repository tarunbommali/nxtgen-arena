{
    "name": "nxtgenlabs-monorepo",
    "version": "1.0.0",
    "description": "NxtGenLabs - Engineering Learning & Competition Platform",
    "private": true,
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "install:all": "npm install && npm install --prefix client && npm install --prefix server",
        "dev:client": "npm run dev --prefix client",
        "dev:server": "npm run dev --prefix server",
        "dev": "concurrently -n \"CLIENT,SERVER\" -c \"cyan,green\" \"npm run dev:client\" \"npm run dev:server\"",
        "build:client": "npm run build --prefix client",
        "start:server": "npm start --prefix server",
        "seed": "npm run seed --prefix server",
        "clean": "rimraf client/node_modules server/node_modules node_modules client/dist",
        "cleanup": "powershell -ExecutionPolicy Bypass -File ./scripts/cleanup.ps1",
        "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
        "lint": "eslint . --ext .js,.jsx"
    },
    "keywords": [
        "education",
        "hackathon",
        "roadmap",
        "dsa",
        "learning-platform"
    ],
    "author": "NxtGenLabs Team",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.2",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}